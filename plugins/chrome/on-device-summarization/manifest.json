{
  "name": "Qualcomm AI summarization",
  "version": "0.2",
  "manifest_version": 3,
  "description": "Get a short summary of webpage content using Qualcomm AI summarization with Llama 3.1 8B model",
  "trial_tokens": [
    ""
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "scripting", "sidePanel", "storage", "nativeMessaging"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Generate a summary"
  }
}
